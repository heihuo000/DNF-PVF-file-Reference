				[height] 200	// 攻击高度
				[depth] 400	// 攻击深度
			[/area attack]
		[/level]
		
		// 2级数据
		[level]
			[physical attack] 850.0
			[magical attack] 220.0
			[attack range] 420.0
			[hit recovery] 2000
			[attack count] 5
			[hit info]
				[blow] 1
				[blood] 1
				[stun] 1
				[critical] 1
			[/hit info]
			[special effect]
				[invincible] 1500
				[super armor] 1
